/**
Test pdef module with messages and forms.
Multi-line comment.
*/
module pdef.test.messages;
from pdef.test import inheritance;


/**
Enum.
Multi-line comment.
*/
enum TestEnum {
    ONE, TWO, THREE;
}


/**
Simple message.
Multi-line comment.
*/
message SimpleMessage {
    aString     string;
    aBool       bool;
    anInt16     int16;
}

/** Message with fields of all data types. */
message ComplexMessage : SimpleMessage {
    anInt32     int32;
    anInt64     int64;
    aFloat      float;
    aDouble     double;

    aList       list<int32>;
    aSet        set<int32>;
    aMap        map<int32, float>;

    anEnum      TestEnum;
    aMessage    SimpleMessage;
    aPolymorphicMessage inheritance.Base;
}

@form
message SimpleForm {
    text        string;
    numbers     list<int32>;
    flag        bool;
}
