module pdef.test.interfaces;
from pdef.test import messages;


/** Test exception. */
exception TestException {
    text    string;
}


/** Test interface with method of all types. */
interface TestInterface : throws TestException {
    /** Index remote method. */
    indexMethod(a int32; b int32) string, index;

    /** Remote method. */
    remoteMethod(a int32; b int32) string;

    /** Post remote method. */
    postMethod(aList list<int32>; aMap map<int32, int32>) string, post;

    /** Remote method with a message query arg, returns the same message. */
    queryMethod(msg messages.SimpleMessage, query) messages.SimpleMessage;

    /** Void method which returns null. */
    voidMethod() void;

    /** Exception method which raises a test exception. */
    excMethod() void;

    /** Interface (not remote) method which returns a next interface. */
    interfaceMethod(a int32; b int32) NextTestInterface;
}

/** Next test interface. */
interface NextTestInterface {
    /** Index method. */
    indexMethod() string;

    /** Remote method. */
    remoteMethod() messages.SimpleMessage;

    /** Remote string method. */
    stringMethod(text string) string;
}
