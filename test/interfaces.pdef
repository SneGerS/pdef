module pdef.test.interfaces;
from pdef.test import inheritance, messages;


/**
Test exception.
Multi-line comment.
*/
exception TestException {
    text    string;
}


/**
Test interface with method of all types.
Multi-line comment.
*/
@throws(TestException)
interface TestInterface {
    /**
    Returns the sum of the numbers.
    Multi-line comment.
    */
    path(arg0 int32, arg1 int32) int32;

    /** Returns the sum of the numbers. */
    query(arg0 int32, arg1 int32) int32;

    /** Returns the sum of the numbers. */
    @post
    post(arg0 int32, arg1 int32) int32;

    /** Returns the sum of the numbers. */
    terminal(arg0 int32, arg1 int32) int32;

    /** Void method which returns null. */
    void0() void;

    /** Throws a TestException. */
    exc0() void;

    /** Returns the same string. */
    string0(text string) string;

    /** Returns the same message. */
    message0(msg messages.TestMessage) messages.TestMessage;

    /** Returns the same polymorphic message. */
    polymorphic(msg inheritance.Base) inheritance.Base;

    /** Returns the total number of items. */
    collections(list0 list<int32>, set0 set<int32>, map0 map<int32, int32>) int32;

    /** Returns the same interface (yes, it's endless). */
    interface0(arg0 int32, arg1 int32) TestInterface;
