module io.pdef.test.interfaces;
import io.pdef.test as test;


interface App {
    users() Users;
    calc() Calc;
}

interface Calc {
    sum(i0 int32, i1 int32) int32;
}

interface User {
    name() string;
    rename(name string) string;
}

interface Users {
    get(id int32) User;

    register(
        name        string,
        email       string,
        birthday    Date) User;
}

interface InternalUsers extends Users {
    delete(id int32) void;
    create(newUser test.User) test.User;
}

interface Posts {
    create(title string, text string) test.Post;
}

message Date {
    year    int32;
    month   int32;
    day     int32;
}
